<div class = "container">
  <h1>Repos <%= @user %></h1>
  <!-- List repositories and display username here! -->
  <% if @repos.size > 0 %>
    <ul>
      <% @repos.each do |repo| %>
        <li><%= link_to repo['name'], repo['html_url'] %></li>
      <% end %>
    </ul>
  <% else %>
    <p>Looks like you don't have any repos yet.</p>
  <% end %>

  <%= form_tag("/repositories/create", method: "post") do %>
    <%= label_tag(:name, "Create a New Repo:") %>
    <%= text_field_tag(:name, nil, id: "new-repo") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
